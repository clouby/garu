<div class="mt-6 max-w-4xl mx-auto">
  <%= link_to "Back to all tasks", tasks_path, class: "btn btn-ghost" %>
</div>
<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="card bg-base-100 shadow-xl">
    <figure class="h-96">
      <img
        src="<%= @game['background_image'] %>"
        alt="<%= @game['name'] %>"
        class="object-cover w-full h-full"
      />
    </figure>
    <div class="card-body">
      <h2 class="card-title text-3xl font-bold"><%= @game["name"] %></h2>
      <div class="flex gap-2 mt-2">
        <% @game['genres'].each do |genre| %>
          <div class="badge badge-outline"><%= genre["name"] %></div>
        <% end %>
      </div>
      <div class="divider my-4"></div>
      <div class="prose max-w-none wrap-anywhere">
        <%= sanitize @game["description"] %>
      </div>
      <div class="divider my-4"></div>
      <div class="stats stats-vertical lg:stats-horizontal shadow">
        <div class="stat">
          <div class="stat-title">Release Date</div>
          <div class="stat-value text-lg"><%= @game["released"] %></div>
        </div>
        <div class="stat">
          <div class="stat-title">Metacritic</div>
          <div class="stat-value text-lg"><%= @game["metacritic"] %></div>
        </div>
        <div class="stat">
          <div class="stat-title">Rating</div>
          <div class="stat-value text-lg"><%= @game["rating"] %>
            / 5</div>
        </div>
      </div>
      <div class="divider my-4"></div>
      <div>
        <h3 class="text-xl font-bold mb-4">Platforms</h3>
        <div class="flex gap-2">
          <% @game['platforms'].each do |platform| %>
            <div class="badge badge-lg"><%= platform["platform"]["name"] %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
