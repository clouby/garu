<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <div role="alert" class="alert alert-success mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>

        <span><%= notice %></span>
      </div>
    <% end %>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title"><%= @task.title %></h2>
        <p><%= @task.description %></p>
        <div class="card-actions justify-end">
          <span class="badge badge-ghost"><%= @task.status %></span>
          <span class="badge badge-ghost"><%= @task.user.email %></span>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-secondary" %>
      <%= button_to "Destroy this task", @task, method: :delete, class: "btn btn-danger" %>
      <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

