<%= form_with(model: task, class: "card-body", data: { turbo: false }) do |form| %>
  <% if task.errors.any? %>
    <div role="alert" class="alert alert-error">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="stroke-current shrink-0 h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
      ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
        /></svg>
      <div>
        <h3 class="font-bold"><%= pluralize(task.errors.count, "error") %>
          prohibited this task from being saved:</h3>
        <div class="text-xs">
          <ul class="list-disc list-inside">
            <% task.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="fieldset">
    <%= form.label :name, class: "fieldset-legend" %>
    <%= form.text_field :name, class: "input w-full", placeholder: "Type your task name" %>
    <p class="label"><%= t("form.required") %></p>
  </div>

  <div class="fieldset">
    <%= form.label :description, class: "fieldset-legend" %>
    <%= form.text_area :description,
                   rows: 1,
                   class: "textarea w-full",
                   placeholder: "Type your task description" %>
    <p class="label"><%= t("form.required") %></p>
  </div>

  <div class="fieldset">
    <%= form.label :content, class: "fieldset-legend" %>
    <%= form.rich_text_area :content, class: "textarea w-full" %>
    <p class="label"><%= t("form.required") %></p>
  </div>

  <div class="fieldset">
    <%= form.label :rawg_game_id, "Game", class: "fieldset-legend" %>
    <%= button_tag "+ Add Game",
    type: "button",
    class: "btn",
    onclick: "modal_game_search.showModal()" %>
  </div>

  <div class="fieldset">
    <%= form.label :status, class: "fieldset-legend" %>
    <%= form.select :status,
                options_for_select(
                  Task.statuses.map do |key, value|
                    [key.titleize, Task.statuses.key(value)]
                  end,
                  task.status,
                ),
                {},
                { class: "select w-full", disabled: task.new_record? } %>

    <p class="label"><%= t("form.optional") %></p>
  </div>

  <div class="flex mt-6 justify-between items-end">
    <%= link_to "Back to tasks", tasks_path, class: "btn btn-ghost mt-4" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<dialog id="modal_game_search" class="modal">
  <div class="modal-box">
    <h3 class="text-lg font-bold">Search a new game</h3>
    <div class="modal-content">
    <%= form_with(url: search_games_path, method: :get, data: { turbo_frame: "search_results" }) do |form| %>
      <div class="join w-full mt-2">
        <div class="w-full">
          <%= form.label :query, "Type your favorite game", class: "input join-item w-full" do %>
            <svg class="h-[1em] opacity-50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <g
                stroke-linejoin="round"
                stroke-linecap="round"
                stroke-width="2.5"
                fill="none"
                stroke="currentColor"
              >
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.3-4.3"></path>
              </g>
            </svg>
            <%= form.text_field :query, placeholder: "Type your favorite game", autofocus: true %>
          <% end %>
        </div>
        <%= form.submit "Search", class: "btn btn-neutral join-item" %>
      </div>
    <% end %>
    <div class="w-full overflow-y-auto max-h-[200px]">
        <%= render "games/search_results", games: [] %>
    </div>
    </div>
    <!-- <div class="modal-action">
      <form method="dialog">
        <button class="btn">Close</button>
      </form>
    </div> -->
  </div>
</dialog>
