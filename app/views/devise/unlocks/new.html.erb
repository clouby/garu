<div class="hero min-h-screen bg-base-200">
  <div class="hero-content w-full max-w-sm">
    <div class="card shrink-0 w-full shadow-2xl bg-base-100">
      <div class="card-body">
        <h2 class="card-title">Resend unlock instructions</h2>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-control">
            <%= f.label :email, class: "label" do %>
              <span class="label-text">Email</span>
            <% end %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered", placeholder: "email" %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit "Resend unlock instructions", class: "btn btn-primary" %>
          </div>
        <% end %>
        <div class="divider"></div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
