<!-- How It Works Section -->
<div class="py-16 bg-base-200 rounded-box">
  <h2 class="text-4xl font-bold text-center mb-12">How It Works</h2>
  <ul class="steps steps-vertical lg:steps-horizontal w-full">
    <li class="step step-primary">
      <div class="p-4 text-left">
        <h3 class="font-bold">Sign Up</h3>
        <p class="text-sm">Create your free account in seconds.</p>
      </div>
    </li>
    <li class="step step-primary">
      <div class="p-4 text-left">
        <h3 class="font-bold">Add Games</h3>
        <p class="text-sm">Search for games and add them to your backlog.</p>
      </div>
    </li>
    <li class="step">
      <div class="p-4 text-left">
        <h3 class="font-bold">Organize</h3>
        <p class="text-sm">Set the status of your games (Todo, In Progress, Completed).</p>
      </div>
    </li>
    <li class="step">
      <div class="p-4 text-left">
        <h3 class="font-bold">Conquer!</h3>
        <p class="text-sm">Enjoy a clear view of your gaming goals.</p>
      </div>
    </li>
  </ul>
</div>
